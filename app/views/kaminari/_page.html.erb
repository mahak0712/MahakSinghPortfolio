<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link',style: 'background-color: #444B6E;color:white;hover:opacity:0.6%' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link',style: 'background-color: #444B6E;color:white;hover:opacity:0.6%' %>
  </li>
<% end %>
