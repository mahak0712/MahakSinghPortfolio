
<%= form_with(model: @portfolio_item, local: true) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title , class: 'form-control form-control-lg'%>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group">
    <label class="btnUpload">
     Upload a main image file <%= form.file_field :main_image , style: 'display:none;'%>
    </label>
    
   
  </div>
  <div class="form-group">
     <label class="btnUpload">
     Upload a thumb image file <%= form.file_field :thumb_image ,style: 'display:none;'%>
    </label>
  </div>
  </div>
<div class="col-md-6">
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control form-control-lg' ,rows: 15 %>
  </div>
</div>

</div>
 

  

  
  <hr>
<div class="col-md-12">
  <h2>Technologies</h2>

  <div>
    <%= form.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btnSubmit' %>
  </div>
</div>
<% end %>