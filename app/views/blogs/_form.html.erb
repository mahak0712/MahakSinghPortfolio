<%= form_with(model: blog, local: true) do |form| %>
  

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control form-control-lg', placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' ,rows:18,  placeholder: "Content" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btnSubmit' %>
  </div>
<% end %>
