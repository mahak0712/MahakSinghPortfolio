
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
 

    <meta name="keywords" content="<%= @seo_keywords %>" />
   

    <%= stylesheet_link_tag 'page', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>



  </head>

  <body>
    
<!-- Navigation -->
 
        <header style="background-image:linear-gradient(rgb(0,0,0,0.3),rgb(0,0,0,0.3)),url('/assets/office3.jpeg');">

    
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav"  style = "background-color:white">
        <div class="container">
        <h2 class="navbar-brand brand-name">
        <a href="/" class="pull-left"><img        
        src="/assets/logo.png" style = "height:80px;width:100px"></a>
    </h2>
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation" style="border:none">
          <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto center">
         
                <%= link_to "Home", root_path , class: "nav-link"%>
            
                <%= link_to "About", aboutme_path, class: "nav-link" %>
             
              
                <%= link_to "Contact", contact_path, class: "nav-link" %>
              
           
                <%= link_to "Blogs", blogs_path , class: "nav-link"%>
              
             
                <%= link_to "Portfolio", portfolios_path , class: "nav-link"%>
              
            
                <%= login_helper "nav-link"%>
              
            </ul>
          </div>
        </div>
      </nav>
      
    
    <a name="home"></a>
    <div class="container-fluid">
      <div class="more-space row">
        <div class="col-md-12">
          <div class="text-center intro">
       <h1 class = "resume">Hello !</h1>
          </div>
        </div>
      </div>
    </div>
    </div>

  </header>  




<%= yield %>
  
        
    
   <%= render "shared/aboutme_footer"  %>
 
  </body>
</html>